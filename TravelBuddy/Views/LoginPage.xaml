<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TravelBuddy.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10,30">
            <Label
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Travel Buddy"></Label>
            <Image 
                Source="globefull"
                WidthRequest="230">
            </Image>
            <Label
                Text="E-Mail">
            </Label>
            <Entry
                Keyboard="Email"
                Placeholder="Enter your Email...">
            </Entry>
            <Label
                Text="Password">
            </Label>
            <Entry
                IsPassword="true"
                Placeholder="Enter your Password...">
            </Entry>
            <ActivityIndicator></ActivityIndicator>

            <Button
                BackgroundColor="Teal"
                BorderRadius="25"
                TextColor="White"
                FontAttributes="Bold"
                Text="Login">
            </Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
